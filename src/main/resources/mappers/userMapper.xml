<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hermes.hermes.mapper.UserMapper">

    <select id="getAllUsers" >
        SELECT * FROM USERPROFILE
        SELECT * FROM USER
    </select>
    <insert id="insertUser">
        INSERT INTO USER(ID,NAME,PASSWORD,user_verification_answer)
        VALUES
            (#{id},#{name},#{password},#{user_verification_answer})
    </insert>
    <select id="findByUsername">
        SELECT NAME
        FROM USER
        WHERE NAME = #{name}
    </select>

    <select id="getProductImage" resultType="byte[]">
        SELECT product_image
        FROM product
        WHERE product_reg_num = #{product_reg_num}
    </select>

    <select id="getProduct" resultType="com.hermes.hermes.dto.Product">
        SELECT * FROM product WHERE product_reg_num = #{product_reg_num}
    </select>
</mapper>